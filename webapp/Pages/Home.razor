@page "/"

<PageTitle>bionscale</PageTitle>

<div class="page-container">
    <div class="logo-container">
        @*<h1 class="logo-text">bionscale</h1> *@
        <div class="image-wrapper">
            <img src="images/logo.png" alt="Description of the image" class="styled-image" />
        </div>
        <p class="caption">The Home that Leads the Next Biotech/Pharma Innovations.</p>
    </div>
</div>

<footer class="footer">
    <p>&copy; 2024 bionscale.com</p>
</footer>

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Arial', sans-serif;
        background: linear-gradient(to right, #111524, #181E33);
        color: #EBD8C9; /* Text color to stand out against the dark background */
    }

    .page-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    .caption {
        margin-top: 30px;
        font-size: 16px;
        color: #EBD8C9;
    }

    .logo-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .logo-text {
        font-size: 64px; /* Make the logo text larger */
        background: linear-gradient(to right, #00c6ff, #ff00cc);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0;
        font-family: 'Poppins', sans-serif; /* Apply the imported font */
    }

    .image-wrapper {
        background-color: #0D101C; /* Background color of the image container */
        padding: 2px; /* Padding around the image */
        border-radius: 25px; /* Rounded corners for the image container */
        margin-top: 10px; /* Space between the logo text and the image */
    }

    .styled-image {
        border-radius: 14px; /* Rounded corners for the image itself */
        display: block;
        max-width: 100%; /* Ensure the image is responsive */
        width: 300px; /* Set the image width to 300px */
    }

    .footer {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        color: #777779; /* Gray color for the text */
        text-align: left;
        padding: 3px;
        margin-left:5px;
        font-size:13px;
        font-family: 'Arial', sans-serif;
    }
</style>
